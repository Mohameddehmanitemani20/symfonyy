{% extends 'front.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idarticle</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Description</th>
                <th>Nbrlike</th>
                <th>User</th>
              
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.idarticle }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.nbrlike }}</td> 
                <td>{{article.idUser}}
               
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
